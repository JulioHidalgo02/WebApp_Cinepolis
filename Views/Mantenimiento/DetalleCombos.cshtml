@model IEnumerable<WebApp_Cinepolis.Entities.Producto>
@{
    decimal total = 0;
    int combo = 0;
    foreach(var item in Model)
    {
        combo = item.IdCombo;
        total = total + item.precio;
    }
}
<section class="py-5">
    <div class="container">
        <div class="row mb-5">
            <div class="col-lg-6">
                <h1>Combo #@combo </h1>
                <p class="text-muted lead">₡ @total.ToString("0.##")</p>
                <ul class="list-unstyled small d-inline-block">
                    @foreach(var productos in Model)
                    {
                         <li class="px-3 py-2 mb-1 bg-white text-muted"><strong class="text-uppercase text-dark">Producto:</strong><p class="reset-anchor ms-2">@productos.Nombre</p></li>
                    }
                   
                </ul>
                <div class="col-12">
                    <a class="btn btn-primary" href="@Url.Action("Agradecimiento","Mantenimiento")" >Finalizar Compra</a>
                </div>
            </div>
        </div>
    </div>
</section>